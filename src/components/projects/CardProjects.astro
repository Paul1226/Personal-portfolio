---
import { type Project } from "../../data/Projects";
import Btn from "../../assets/buttons/ButtonsPage.astro";
import ListIcons from "./ListIcons.astro";

interface Props {
  datos: Project;
}

const { name, description, image, linkGit, linkPage, technologies } =
  Astro.props.datos;
---

<article class="grid p-4 shadow-lg pl-5 bg-white group">
  <figure class="w-full rounded-md rounded-bl-none overflow-hidden relative">
    <img
      class="w-full h-full transition-all duration-300 aspect-video object-cover brightness-90 group-hover:brightness-50"
      src={image}
      alt={`Proyecto de ${name}`}
      loading="lazy"
    />
    <div
      class="absolute bottom-0 left-0 w-max bg-white p-2 pl-0 rounded-tr-lg flex flex-wrap gap-6"
    >
      <h5 class="text-bluee-500 font-bold">{name}</h5>
      <ListIcons list={technologies} />
    </div>

    <div
      class="absolute w-full h-full inset-0 hidden place-content-center gap-4 group-hover:grid"
    >
      <span class="w-max h-max ss">
        <Btn href={linkPage} isPrincipal text="Visitar" pageOut />
      </span>

      <span class="w-max h-max ss ss-two">
        <Btn href={linkGit} text="CÃ³digo" pageOut light />
      </span>
    </div>
  </figure>

  <p class="mt-4">{description}</p>
</article>

<style>
  .ss {
    scale: 0;
    animation: show-btns 300ms cubic-bezier(0.215, 0.61, 0.355, 1) both;
  }
  .ss-two {
    animation-delay: 100ms;
  }
  @keyframes show-btns {
    100% {
      scale: 1;
    }
  }
</style>
