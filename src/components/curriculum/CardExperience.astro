---
import { type Experience } from "../../data/Experience";
interface Props {
  datos: Experience;
}

const { date, companyName, companyUbi, description, position } =
  Astro.props.datos;
---

<article
  class="grid grid-cols-1 gap-4 md:grid-cols-2 p-4 rounded-lg shadow-lg backdrop-blur-sm bg-white/30"
>
  <div class="flex flex-col gap-4">
    <h3 class="text-bluee-500 font-bold">{date}</h3>
    <div class="">
      <strong>{position}</strong>
      <p>{companyName}</p>
    </div>
    <p class="pt-1">{companyUbi}</p>
  </div>
  <div class="d">
    <p>{description}</p>
  </div>
</article>
