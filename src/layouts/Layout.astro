---
interface Props {
  title: string;
  principal?: boolean;
}
const { title, principal = true } = Astro.props;

// components
import Footer from "@shared/Footer.astro";

// fonts
// 300-900
import "@fontsource-variable/red-hat-display";
import Header from "@header/Header.astro";
import ScrollToTop from "@shared/ScrollToTop.astro";
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="relative -z-50 bg-lightscreen">
    <main>
      {principal && <Header />}
      <slot />
    </main>
    <Footer />
    <ScrollToTop />
  </body>
</html>

<style is:global>
  :root {
    /* variables */
    --primary: #166534;
    --secondary: #feffbe;
    --terciary: #cc2936;
    --cuaternary: #0050ff;
    --lightsreen: #f8fafc;
    --darksreen: #2f3037;
  }
  * {
    padding: 0;
    margin: 0;
    border: 0;
    box-sizing: border-box;
  }
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: "Red Hat Display Variable", sans-serif;
    scroll-behavior: smooth;
  }

  body {
    --sb-track-color: #ffffff09;
    --sb-thumb-color: #15803d;
    --sb-size: 8px;
  }

  body::-webkit-scrollbar {
    width: var(--sb-size);
  }

  body::-webkit-scrollbar-track {
    background: var(--sb-track-color);
    border-radius: 10px;
  }

  body::-webkit-scrollbar-thumb {
    background: var(--sb-thumb-color);
    border-radius: 10px;
    border: 1px solid #ffffff;
    /* border-color: var(--sb-track-color); */
  }

  @supports not selector(::-webkit-scrollbar) {
    body {
      scrollbar-color: var(--sb-thumb-color) var(--sb-track-color);
    }
  }
</style>
