---
interface Props {
  dates: string;
  title: string;
  subTitle: string;
  site: string;
  details: string;
}
const { dates, title, subTitle, site, details } = Astro.props;
---

<article
  class="grid grid-cols-1 gap-4 md:grid-cols-2 p-4 rounded-lg shadow-lg backdrop-blur-xs bg-white/60"
>
  <div class="flex flex-col gap-4">
    <h3 class="text-bluee-500 font-bold">{dates}</h3>
    <div class="">
      <strong>{title}</strong>
      <p>{subTitle}</p>
    </div>
    <p class="pt-1">{site}</p>
  </div>
  <div class="d">
    <p>{details}</p>
  </div>
</article>
