---
interface Props {
  text: string;
}
const { text } = Astro.props;
---

<header class="flex items-center justify-center gap-3">
  <div
    class="size-4 aspect-square bg-regalBlueDark rounded-[4px] dark:bg-primary"
  >
  </div>
  <h2 class="text-3xl font-black capitalize dark:text-whiteHaze">
    {text}
  </h2>
  <figure class="h-8 aspect-square dark:text-whiteHaze">
    <slot />
  </figure>
</header>
