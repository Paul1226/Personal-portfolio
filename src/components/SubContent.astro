---
import Btn from "@shared/ButtonsPage.astro";
import SectionWrapperCards from "./SectionWrapperCards.astro";

interface Props {
  subTitle: string;
  containBtn?: boolean;
}
const { subTitle, containBtn = false } = Astro.props;
---

<div class="flex flex-col gap-5">
  <div class="flex items-center justify-between">
    <h3 class="text-2xl font-bold flex items-center gap-3 dark:text-whiteHaze">
      {subTitle}
      <figure class="h-8 aspect-square">
        <slot name="icon-in-subTitle" />
      </figure>
    </h3>
    {containBtn && <Btn href="#" text="Descargar CV" isPrincipal />}
  </div>
  <!-- <Experience /> -->
  <SectionWrapperCards>
    <slot />
  </SectionWrapperCards>
</div>
