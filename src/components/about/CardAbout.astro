---
interface Props {
  gridArea: string;
  question: string;
}
const { gridArea, question } = Astro.props;
---

<article class:list={[gridArea, "bg-white p-3 rounded-lg shadow-xl"]}>
  <h4 class="font-bold">{question}</h4>
  <div class="descript text-sm text-gray-800">
    <slot />
  </div>
</article>
