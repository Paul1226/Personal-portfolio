---
interface Props {
  dates: string;
  title: string;
  subTitle: string;
  site: string;
  details: string;
}
const { dates, title, subTitle, site, details } = Astro.props;
---

<article
  class="grid grid-cols-1 gap-4 md:grid-cols-2 p-4 rounded-lg shadow-lg bg-white dark:bg-porcelain dark:text-whiteHaze transition-colors duration-300 ease-in-out"
>
  <div class="flex flex-col gap-4">
    <h3
      class="text-regalBlue font-bold dark:text-regalBlueDark transition-colors duration-300 ease-in-out"
    >
      {dates}
    </h3>
    <div class="">
      <strong>{title}</strong>
      <p>{subTitle}</p>
    </div>
    <p class="pt-1">{site}</p>
  </div>
  <div class="d">
    <p
      class="dark:font-extralight text-slate-700 dark:text-whiteHaze/80 transition-colors duration-300 ease-in-out"
    >
      {details}
    </p>
  </div>
</article>
